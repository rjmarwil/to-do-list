<br/>

<%= form_for(@task, html:{class:"form-horizontal"}) do |f| %>

<div class="form-group row">
  <div class="form-controls col-md-4">
    <%= f.text_field :description, :class => 'form-control' %>
  </div>
</div>

<div class="form-group row">
  <div class="col-md-4">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
</div>

<% end %>

<div class="col-md-8">
  <ol>
    <% @tasks.each do |task| %>
    <li>
      <%= task.description %>
      <%= link_to '', swap_task_path(task, direction: -1), method: :patch, class: "glyphicon glyphicon-chevron-up"  %>
      <%= link_to '', swap_task_path(task, direction: 1), method: :patch, class: "glyphicon glyphicon-chevron-down" %>
      <%= link_to '', task_path(task), method: :delete, class:'glyphicon glyphicon-trash' %>
    </li>
    <% end %>
  </ol>  
</div>
