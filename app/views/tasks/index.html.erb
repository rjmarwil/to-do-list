<br/>

<div class="col-md-4">
  <%= form_for(@task, html:{class:"form-horizontal"}) do |f| %>

  <div class="form-group row">
    <%= f.text_field :description, :class => 'form-control' %>
  </div>

  <div class="form-group row">
    <%= f.submit :class => "btn btn-primary" %>
  </div>

  <% end %>
</div>

<div class="col-md-8">
  <ol>
    <% @tasks.each do |task| %>
    <div class="col-md-6">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><li><%= task.description %></li></h3>
        </div>
        <div class="panel-body">
          <%= task.description %>
          <%= link_to '', swap_task_path(task, direction: -1), method: :patch, class: "glyphicon glyphicon-chevron-up"  %>
          <%= link_to '', swap_task_path(task, direction: 1), method: :patch, class: "glyphicon glyphicon-chevron-down" %>
          <%= link_to '', task_path(task), method: :delete, class:'glyphicon glyphicon-trash' %>
        </div>
      </div>
    </div>
    <% end %>
  </ol>
</div>
